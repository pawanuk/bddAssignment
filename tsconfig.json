{
    "compilerOptions": {
      "target": "ESNext",                   // Specify ECMAScript target version
      "module": "commonjs",                 // Specify module code generation
      "strict": true,                       // Enable all strict type-checking options
      "esModuleInterop": true,              // Enable compatibility with CommonJS modules
      "skipLibCheck": true,                 // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
      "baseUrl": "./",                      // Base directory for resolving paths
      "paths": {
        "@utils/*": ["src/utils/*"],        // Path alias for utils
        "@pages/*": ["src/pages/*"]         // Path alias for pages
      },
      "outDir": "./dist",                   // Output directory for compiled files
      "rootDir": "./src",                   // Root directory of input files
      "sourceMap": true                     // Generate source map files
    },
    "include": ["src/**/*"],                // Include all TypeScript files in the src directory
    "exclude": ["node_modules", "dist"]     // Exclude these directories
  }
  